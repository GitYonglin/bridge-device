{
  "name": "bridge",
  "version": "0.0.0",
  "main": "./app/js/main.js",
  "author": {
    "name": "Peach",
    "email": "peachlin@outlook.com",
    "url": "https://github.com/PeachT/kairuimo"
  },
  "description": "智能设备",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.json",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "hmr": "ng serve --proxy-config proxy.conf.json --hmr --aot",
    "dev": "concurrently \"ng serve\" \"electron . --dev\"",
    "edev": "electron . --dev",
    "edev-9222": "electron . --remote-debugging-port=9222",
    "win-ng-pack": "ng build --prod --build-optimizer && electron-builder -w",
    "win-pack": "electron-builder -w",
    "win-pack32": "electron-builder --ia32 --x64 -w",
    "linux-ng-pack": "ng build && electron-builder --linux",
    "linux-ng-prod-pack": "ng build --prod --build-optimizer && electron-builder --linux",
    "linux-pack": "electron-builder --linux",
    "all-pack": "electron-builder -mwl"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.12",
    "@angular/common": "~8.2.12",
    "@angular/compiler": "~8.2.12",
    "@angular/core": "~8.2.12",
    "@angular/forms": "~8.2.12",
    "@angular/platform-browser": "~8.2.12",
    "@angular/platform-browser-dynamic": "~8.2.12",
    "@angular/router": "~8.2.12",
    "@ngrx/effects": "^8.4.0",
    "@ngrx/store": "^8.4.0",
    "@ngrx/store-devtools": "^8.4.0",
    "core-js": "^3.3.4",
    "date-fns": "^2.6.0",
    "dexie": "^2.0.4",
    "echarts": "^4.4.0",
    "lz-string": "^1.4.4",
    "ng-zorro-antd": "^8.4.1",
    "ngx-electron": "^2.2.0",
    "rxjs": "~6.5.3",
    "sleep-ts": "^0.1.1",
    "ts-md5": "^1.2.7",
    "tslib": "^1.10.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.14",
    "@angular/cdk": "~8.2.3",
    "@angular/cli": "~8.3.14",
    "@angular/compiler-cli": "~8.2.12",
    "@angular/language-service": "~8.2.12",
    "@types/echarts": "^4.4.0",
    "@types/jasmine": "~3.4.4",
    "@types/jasminewd2": "~2.0.8",
    "@types/node": "~12.11.7",
    "codelyzer": "~5.2.0",
    "electron": "^6.0.0",
    "electron-builder": "^20.44.4",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "protractor": "~5.4.2",
    "ts-node": "~8.4.1",
    "tslint": "~5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "~3.4.5"
  },
  "build": {
    "appId": "con.bridge-Tesk.app",
    "productName": "智能设备",
    "directories": {
      "output": "pack"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://localhost:5500/up/"
      }
    ],
    "win": {
      "icon": "build/icons/lq/256x256.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "deb"
      ],
      "icon": "build/icons/lq"
    }
  },
  "keywords": [
    "dist"
  ]
}
